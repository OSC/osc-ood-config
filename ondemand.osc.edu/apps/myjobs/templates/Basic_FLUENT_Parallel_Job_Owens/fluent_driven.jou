rc driven.msh
define/models/solver/segregated y
define/materials/change-create/air air y constant 1 n n y constant 0.001 n n n n n
define/boundary-conditions/wall top y motion-bc-moving y n 1 1 0 n
solve/initialize/initialize-flow
solve/set/discretization-scheme mom 1
solve/set/discretization-scheme flow 20
solve/set/discretization-scheme pre 10
solve/set/multi-grid-controls x-mom 1 0.1
solve/set/multi-grid-controls y-mom 1 0.1
solve/set/multi-grid-controls pressure 1 0.1
solve/set/under-relaxation pressure 0.3
solve/set/under-relaxation mom 0.7
solve/set/expert y n
solve/monitors/residual convergence-criteria 1.0e-6 1.0e-6 1.0e-6
solve/monitors/surface set-monitor monitor-1 x-wall-shear wall () n y y "shear-wall.out" "Area-Weighted Average"
solve/monitors/surface set-monitor monitor-2 pressure wall () n y y "pressure-wall.out" "Area-Weighted Average"
solve/iterate 2000
wcd driven.cas
exit y
